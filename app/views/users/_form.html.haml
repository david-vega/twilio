= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :nickname
    %br
    = f.text_field :nickname
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :phone_number
    %br
    = f.text_field :phone_number
  .field
    = f.label :password
    %br
    = f.password_field :password
  .actions
    = f.submit
